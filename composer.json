{
    "name": "subjective-php/dom",
    "description": "Collection of utility classes to work with DOMDocument",
    "keywords": ["xml", "dom", "domdocument"],
    "license": "MIT",
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.0 || ^8.0",
        "ext-dom": "*"
    },
    "require-dev": {
        "phpunit/phpunit": ">=6.5",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "autoload": {
        "psr-4": { "SubjectivePHP\\Util\\": "src/" }
    },
    "scripts": {
        "lint": "vendor/bin/phpcs",
        "test": "vendor/bin/phpunit"
    }
}
